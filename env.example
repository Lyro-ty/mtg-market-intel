# =====================================================
# MTG Market Intel - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values

# -----------------
# Application
# -----------------
API_DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# -----------------
# Database (PostgreSQL)
# -----------------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=mtg_user
POSTGRES_PASSWORD=mtg_password
POSTGRES_DB=mtg_market_intel

# -----------------
# Redis
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------
# LLM Configuration
# -----------------
# Provider: openai, anthropic, or mock
LLM_PROVIDER=mock

# OpenAI (optional - leave blank to use mock)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (optional - leave blank to use mock)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# -----------------
# Marketplace APIs
# -----------------
# TCGPlayer API (optional - requires partner agreement)
TCGPLAYER_API_KEY=
TCGPLAYER_API_SECRET=

# Cardmarket API (optional)
CARDMARKET_APP_TOKEN=
CARDMARKET_APP_SECRET=
CARDMARKET_ACCESS_TOKEN=
CARDMARKET_ACCESS_SECRET=

# -----------------
# Scryfall
# -----------------
# Rate limit: 50-100ms between requests (10 requests/second average)
# Default: 75ms (middle of recommended range)
# Note: Scryfall only updates prices once per day, so we cache for 24 hours
SCRYFALL_BASE_URL=https://api.scryfall.com
SCRYFALL_RATE_LIMIT_MS=75

# -----------------
# Scraping Configuration
# -----------------
SCRAPER_USER_AGENT=MTGMarketIntel/1.0
SCRAPER_RATE_LIMIT_SECONDS=1.0
SCRAPER_MAX_RETRIES=3
SCRAPER_BACKOFF_FACTOR=2.0

# -----------------
# Scheduled Tasks
# -----------------
SCRAPE_INTERVAL_MINUTES=30
ANALYTICS_INTERVAL_HOURS=1
RECOMMENDATIONS_INTERVAL_HOURS=6

# -----------------
# CORS (for frontend)
# -----------------
CORS_ORIGINS=["http://localhost:3000"]

# -----------------
# Frontend
# -----------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=MTG Market Intel

